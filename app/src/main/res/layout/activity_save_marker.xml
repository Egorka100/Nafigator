<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="15"
            android:id="@+id/marker_name"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:text="Address"
            android:ems="15"
            android:id="@+id/marker_address"
            android:layout_below="@+id/marker_name"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:inputType="phone"
            android:ems="15"
            android:id="@+id/marker_phone"
            android:layout_below="@+id/marker_address"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:text="Email"
            android:ems="15"
            android:id="@+id/marker_email"
            android:layout_below="@+id/marker_phone"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_show_coordinates"
            android:text="Координаты:"
            android:layout_below="@+id/marker_email"
            android:layout_marginTop="10dp"/>

        <Button
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="#f0f0f0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить"
            android:id="@+id/btn_save_marker"
            android:layout_below="@id/tv_show_coordinates"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:id="@+id/test"
            android:visibility="invisible"/>

    </RelativeLayout>

</RelativeLayout>